<div class="row"> 
  <h3 class="card">{{article.title}}</h3>
  <h5 class="card-panel articleBody">{{body}}</h5>
  
</div>


<div class="row">
  <div class="col s2"></div>
   <form action="/note/{{article._id}}" method="POST" class="card-panel col s8">
    <h5>Note on this Article:</h5>
      <div class="row">
        <div class="input-field">
          <i class="material-icons prefix">perm_identity</i>
          <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
        </div>
        <div class="input-field">
          <i class="material-icons prefix">note</i>
          <input id="icon_telephone" type="text" placeholder="note" name="note" class="validate active">
        </div>
      </div>
       <!-- Submit Button -->
      <div class="row">
        <div class="input-field">
        <center><input class="btn add-note-button blue lighten-1" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div>

{{!-- notes go here --}}
<div class="row">
  <div class="col s2"></div>
    <div class="col s8">
      <h5>note:</h5>
        {{#if article.note}}
          {{#each article.note}}
            <div class="card">
              <p id="nameNote">{{name}}</p>
              <p>{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Notes Yet.</p>
        {{/if}}
    </div>
</div>